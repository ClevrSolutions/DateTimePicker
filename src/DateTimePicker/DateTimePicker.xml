    <properties>
        <property key='attribute' type='attribute'>
            <caption>DateTime Attribute</caption>
            <category>Attribute</category>
            <description>Attribute which the DateTimePicker will serve</description>
            <attributeTypes>
                <attributeType name="DateTime"/>
            </attributeTypes>
        </property>
        <property key="enabled" type="boolean" defaultValue="true">
            <caption>Enabled</caption>
            <category>Attribute</category>
            <description>Configure if the widget will always be enabled/disabled</description>
        </property>
        <property key="enabledattr" type="attribute" required="false">
            <caption>Enabled by attribute</caption>
            <category>Attribute</category>
            <description>Configure the attribute(boolean) by which the widget is enabled/disabled (has precedence over [Enabled] setting</description>
            <attributeTypes>
                <attributeType name="Boolean"/>
            </attributeTypes>
        </property>
        <property key="closeButton" type="boolean" defaultValue="false">
            <caption>Show close button</caption>
            <category>Toolbar Options</category>
            <description>Show the close button in the calender popup</description>
        </property>
        <property key="clearButton" type="boolean" defaultValue="false">
            <caption>Show clear button</caption>
            <category>Toolbar Options</category>
            <description>Show the clear button in the calender popup</description>
        </property>
        <property key="toolbarPlacement" type="enumeration" defaultValue="default">
            <caption>Toolbar location</caption>
            <category>Toolbar Options</category>
            <description>Placement of the toolbar in the calender popup</description>
            <enumerationValues>
                <enumerationValue key="default">Default</enumerationValue>
                <enumerationValue key="top">Top</enumerationValue>
                <enumerationValue key="bottom">Bottom</enumerationValue>
            </enumerationValues>
        </property>
        <property key="enabledate" type="boolean" defaultValue="true">
            <caption>Enable date picker</caption>
            <category>Customization</category>
            <description>Enable the date picker part of the widget</description>
        </property>
        <property key="enabletime" type="boolean" defaultValue="true">
            <caption>Enable time picker</caption>
            <category>Customization</category>
            <description>Enable the time picker part of the widget</description>
        </property>
        <property key="setcurrent" type="boolean" defaultValue="false">
            <caption>Set current datetime</caption>
            <category>Customization</category>
            <description>Set the value of the picker to the current datetime if empty on clicking</description>
        </property>
        <property key="minutesteps" type="integer" defaultValue="1">
            <caption>Minute steps</caption>
            <category>Customization</category>
            <description>Steps at which amount of minutes is changed</description>
        </property>
        <property key="showseconds" type="boolean" defaultValue="true">
            <caption>Show seconds</caption>
            <category>Customization</category>
            <description>Show or hide seconds</description>
        </property>
        <property key="customformat" type="translatableString" required="false">
            <caption>Custom datetime format</caption>
            <category>Customization</category>
            <description>Custom datetime formatting (default US: YYYY/MM/DD hh:mm A/PM)</description>
        </property>
        <property key="onchangemf" type="microflow" required="false">
            <caption>On Change Microflow</caption>
            <category>Customization</category>
            <description>Microflow which is executed when the date and/or time changes</description>
            <returnType type="Void"/>
        </property>
    </properties>

</widget>